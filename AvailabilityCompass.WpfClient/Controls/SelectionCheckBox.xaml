<UserControl
    x:Class="AvailabilityCompass.WpfClient.Controls.SelectionCheckBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    x:Name="Root">
    <StackPanel Margin="0,0,0,0">

        <materialDesign:Card
            Height="16"
            MinWidth="40"
            MaxWidth="120"
            Padding="1"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            Panel.ZIndex="1"
            Background="{DynamicResource MaterialDesign.Brush.Primary.Light}"
            Content="{Binding HeaderText, ElementName=Root}"
            FontSize="10"
            Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />

        <StackPanel>
            <CheckBox
                Width="{Binding FullWidth, ElementName=Root}"
                MinHeight="{Binding FullMinHeight, ElementName=Root}"
                Margin="0,-10,0,0"
                IsChecked="{Binding IsChecked, ElementName=Root}"
                IsEnabled="{Binding IsActive, ElementName=Root}"
                Style="{StaticResource MaterialDesignFilterChipSecondaryCheckBox}">
                <CheckBox.Content>
                    <WrapPanel>
                        <TextBlock
                            Padding="0,10,0,5"
                            HorizontalAlignment="Center"
                            Text="{Binding CheckBoxText, ElementName=Root}"
                            TextWrapping="Wrap" />
                    </WrapPanel>
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>