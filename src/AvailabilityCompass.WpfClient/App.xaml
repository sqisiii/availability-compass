<Application
    x:Class="AvailabilityCompass.WpfClient.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:AvailabilityCompass.WpfClient.Pages"
    xmlns:vms="clr-namespace:AvailabilityCompass.Core.Features;assembly=AvailabilityCompass.Core"
    xmlns:manageSources="clr-namespace:AvailabilityCompass.Core.Features.ManageSources;assembly=AvailabilityCompass.Core"
    xmlns:searchRecords="clr-namespace:AvailabilityCompass.Core.Features.SearchRecords;assembly=AvailabilityCompass.Core"
    xmlns:dialogs="clr-namespace:AvailabilityCompass.Core.Features.ManageCalendars.Dialogs;assembly=AvailabilityCompass.Core"
    xmlns:dialogsViews="clr-namespace:AvailabilityCompass.WpfClient.Pages.ManageCalendars.Dialogs">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Glassmorphism Theme Resources -->
                <ResourceDictionary Source="/Themes/GlassLightTheme.xaml" />
                <ResourceDictionary Source="/Themes/GlassBase.xaml" />
                <ResourceDictionary Source="/Themes/GlassControls.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- View-ViewModel DataTemplates -->
            <DataTemplate DataType="{x:Type vms:ManageCalendars.ManageCalendarsViewModel}">
                <views:ManageCalendarsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type searchRecords:SearchViewModel}">
                <views:SearchView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vms:ManageSettings.ManageSettingsViewModel}">
                <views:ManageSettingsView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type manageSources:ManageSourcesViewModel}">
                <views:ManageSourcesView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type dialogs:AddCalendarViewModel}">
                <dialogsViews:AddCalendarView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type dialogs:UpdateCalendarViewModel}">
                <dialogsViews:UpdateCalendarView />
            </DataTemplate>
            <DataTemplate DataType="{x:Type dialogs:DeleteCalendarViewModel}">
                <dialogsViews:DeleteCalendarView />
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
