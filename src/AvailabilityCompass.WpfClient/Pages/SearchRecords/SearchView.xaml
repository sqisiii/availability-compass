<UserControl
    x:Class="AvailabilityCompass.WpfClient.Pages.SearchView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:converters="clr-namespace:AvailabilityCompass.WpfClient.Pages.SearchRecords.Converters"
    xmlns:controls="clr-namespace:AvailabilityCompass.WpfClient.Pages.SearchRecords.Controls"
    xmlns:sharedControls="clr-namespace:AvailabilityCompass.WpfClient.Shared.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:AvailabilityCompass.Core.Features.SearchRecords;assembly=AvailabilityCompass.Core"
    xmlns:helpers="clr-namespace:AvailabilityCompass.WpfClient.Shared.Helpers"
    xmlns:vwp="clr-namespace:WpfToolkit.Controls;assembly=VirtualizingWrapPanel"
    d:DataContext="{d:DesignInstance viewModels:SearchViewModel,
                                     IsDesignTimeCreatable=True}"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:FormGroupVisibilityConverter x:Key="VisibilityConverter" />
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        <converters:CalendarTypeToIconConverter x:Key="CalendarTypeToIconConverter" />
        <converters:CalendarTypeToStyleConverter x:Key="CalendarTypeToStyleConverter" />
        <converters:CalendarTypeToColorConverter x:Key="CalendarTypeToColorConverter" />
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        <converters:ContainerWidthToCardWidthConverter x:Key="CardWidthConverter" CardsPerRow="5" CardMargin="8"
                                                       MinCardWidth="150" />
        <converters:DictionaryToAdditionalFieldsConverter x:Key="AdditionalFieldsConverter" />
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <!-- ReSharper disable once Xaml.RedundantResource -->
        <DataTemplate x:Key="UrlCellTemplate">
            <!-- ReSharper disable Xaml.BindingWithContextNotResolved -->
            <Button Style="{StaticResource GlassIconButton}"
                    Click="UrlIcon_Click"
                    Tag="{Binding [Url]}"
                    ToolTip="{Binding [Url]}"
                    HorizontalAlignment="Center">
                <sharedControls:FluentIcon Glyph="{x:Static sharedControls:FluentIcons.Link}" IconSize="16"
                                           Foreground="{DynamicResource GlassPrimaryBrush}" />
            </Button>
        </DataTemplate>
    </UserControl.Resources>
    <Border Style="{StaticResource GlassCard}"
            Margin="5"
            Padding="5,5,5,15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Grid.Row="0"
                       Style="{StaticResource GlassHeading3}"
                       Margin="0,10,0,10"
                       Text="Search"
                       HorizontalAlignment="Center" />

            <!-- Main content area with overlay -->
            <Grid Grid.Row="1">
                <!-- Layer 0: Base layout (headers with search button, results) -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Headers and Search Button in single row -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Calendars Header with dual-chip support -->
                        <Border Grid.Column="0" CornerRadius="8" Padding="4">
                            <ToggleButton IsChecked="{Binding IsCalendarsSectionExpanded, Mode=TwoWay}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Cursor="Hand"
                                          HorizontalContentAlignment="Stretch"
                                          MinHeight="36"
                                          Padding="0,8">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource GlassMutedBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Expand/Collapse Icon -->
                                    <sharedControls:FluentIcon x:Name="ExpandIcon"
                                                               Grid.Column="0"
                                                               Glyph="{x:Static sharedControls:FluentIcons.ChevronDown}"
                                                               IconSize="12"
                                                               Foreground="{DynamicResource GlassMutedForegroundBrush}"
                                                               Margin="0,0,8,0"
                                                               RenderTransformOrigin="0.5,0.5">
                                        <sharedControls:FluentIcon.Style>
                                            <Style TargetType="sharedControls:FluentIcon">
                                                <Setter Property="RenderTransform">
                                                    <Setter.Value>
                                                        <RotateTransform Angle="0" />
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCalendarsSectionExpanded}"
                                                                 Value="False">
                                                        <Setter Property="RenderTransform">
                                                            <Setter.Value>
                                                                <RotateTransform Angle="-90" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </sharedControls:FluentIcon.Style>
                                    </sharedControls:FluentIcon>

                                    <!-- Section Title -->
                                    <TextBlock Grid.Column="1"
                                               Text="Calendars"
                                               Style="{StaticResource GlassBody}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />

                                    <!-- Summary Chips (visible when collapsed) -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="12,0,0,0"
                                                Visibility="{Binding IsCalendarsSectionExpanded, Converter={StaticResource InverseBooleanToVisibilityConverter}}">
                                        <!-- Green chip for Available days -->
                                        <Border Background="{DynamicResource GlassSuccessBrush}"
                                                Visibility="{Binding HasAvailableDaysSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                CornerRadius="12" Padding="12,4" Margin="0,0,4,0">
                                            <TextBlock Text="{Binding AvailableDaysSummary}"
                                                       Style="{StaticResource GlassCaption}"
                                                       Foreground="{DynamicResource GlassForegroundBrush}"
                                                       FontWeight="SemiBold"
                                                       MaxWidth="200"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Border>
                                        <!-- Amber chip for Blocked days -->
                                        <Border Background="{DynamicResource GlassPrimaryBrush}"
                                                Visibility="{Binding HasBlockedDaysSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                CornerRadius="12" Padding="12,4">
                                            <TextBlock Text="{Binding BlockedDaysSummary}"
                                                       Style="{StaticResource GlassCaption}"
                                                       Foreground="{DynamicResource GlassForegroundBrush}"
                                                       FontWeight="SemiBold"
                                                       MaxWidth="200"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Border>
                                        <!-- Gray chip when none selected -->
                                        <Border Background="{DynamicResource GlassMutedBrush}"
                                                Visibility="{Binding HasCalendarsSelected, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                                CornerRadius="12" Padding="12,4">
                                            <TextBlock Text="None selected"
                                                       Style="{StaticResource GlassCaption}"
                                                       Foreground="{DynamicResource GlassForegroundBrush}"
                                                       MaxWidth="200"
                                                       TextTrimming="CharacterEllipsis" />
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </ToggleButton>
                        </Border>

                        <Rectangle Grid.Column="1" Style="{StaticResource GlassVerticalSeparator}" />

                        <!-- Sources Header -->
                        <sharedControls:CollapsibleSection
                            Grid.Column="2"
                            Header="Sources"
                            Summary="{Binding SourcesSummary}"
                            HasSelection="{Binding HasSourcesSelected}"
                            IsExpanded="{Binding IsSourcesSectionExpanded, Mode=TwoWay}" />

                        <Rectangle Grid.Column="3" Style="{StaticResource GlassVerticalSeparator}" />

                        <!-- Global Filters Header -->
                        <sharedControls:CollapsibleSection
                            Grid.Column="4"
                            Header="Filters"
                            Summary="{Binding FiltersSummary}"
                            HasSelection="{Binding HasFiltersSet}"
                            IsExpanded="{Binding IsFiltersSectionExpanded, Mode=TwoWay}" />

                        <!-- Search Button -->
                        <Button
                            Grid.Column="5"
                            Width="120"
                            Command="{Binding SearchCommand}"
                            Content="Search"
                            Margin="15,0,0,0"
                            VerticalAlignment="Center"
                            Style="{StaticResource GlassPrimaryButton}" />
                    </Grid>

                    <!-- Results Section - Fills remaining space -->
                    <DockPanel Grid.Row="1"
                               Visibility="{Binding HasResults, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <!-- Header with count and sort dropdown -->
                        <Grid DockPanel.Dock="Top" Margin="0,10,0,10">
                            <TextBlock Text="{Binding Results.Count, StringFormat='Results ({0})'}"
                                       Style="{StaticResource GlassBody}"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Text="Sort by:"
                                           Style="{StaticResource GlassCaption}"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0" />
                                <ComboBox ItemsSource="{Binding SortOptions}"
                                          SelectedItem="{Binding SelectedSortOption}"
                                          Style="{StaticResource GlassFloatingHintComboBox}"
                                          Width="100" />
                            </StackPanel>
                        </Grid>

                        <!-- Card Grid -->
                        <ListBox x:Name="ResultsListBox"
                                 ItemsSource="{Binding Results}"
                                 SelectedItem="{Binding SelectedResult, Mode=TwoWay}"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.VirtualizationMode="Recycling"
                                 VirtualizingPanel.ScrollUnit="Pixel">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <vwp:VirtualizingWrapPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="0" />
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <ContentPresenter />
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <!-- Result Card -->
                                    <Border
                                        Width="{Binding ActualWidth, ElementName=ResultsListBox, Converter={StaticResource CardWidthConverter}}"
                                        MinHeight="140" Margin="8"
                                        CornerRadius="12" Padding="12"
                                        Background="{DynamicResource GlassCardBrush}"
                                        BorderBrush="{DynamicResource GlassBorderSolidBrush}"
                                        BorderThickness="1"
                                        Cursor="Hand"
                                        MouseLeftButtonUp="ResultCard_Click"
                                        Tag="{Binding [Url]}"
                                        ToolTip="{Binding [Url]}">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="BorderBrush"
                                                                Value="{DynamicResource GlassPrimaryBrush}" />
                                                        <Setter Property="Background"
                                                                Value="{DynamicResource GlassPrimaryLightBrush}" />
                                                    </Trigger>
                                                    <DataTrigger
                                                        Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}"
                                                        Value="True">
                                                        <Setter Property="BorderBrush"
                                                                Value="{DynamicResource GlassPrimaryBrush}" />
                                                        <Setter Property="BorderThickness" Value="2" />
                                                        <Setter Property="Background"
                                                                Value="{DynamicResource GlassPrimaryLightBrush}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!-- Row 0: Source Badge -->
                                            <Border Grid.Row="0"
                                                    Background="{DynamicResource GlassAccentLightBrush}"
                                                    CornerRadius="10"
                                                    Padding="8,2"
                                                    HorizontalAlignment="Left">
                                                <TextBlock Text="{Binding [SourceName]}"
                                                           Style="{StaticResource GlassCaption}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{DynamicResource GlassAccentBrush}" />
                                            </Border>

                                            <!-- Row 1: Title -->
                                            <TextBlock Grid.Row="1"
                                                       Text="{Binding [Title]}"
                                                       Style="{StaticResource GlassBody}"
                                                       FontWeight="SemiBold"
                                                       TextTrimming="CharacterEllipsis"
                                                       MaxHeight="60"
                                                       Margin="0,8,0,4" />

                                            <!-- Row 2: Date Range -->
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,8">
                                                <sharedControls:FluentIcon
                                                    Glyph="{x:Static sharedControls:FluentIcons.Calendar}"
                                                    IconSize="14"
                                                    Margin="0,0,6,0"
                                                    Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                                                <TextBlock Style="{StaticResource GlassCaption}">
                                                    <Run Text="{Binding [StartDate], Mode=OneWay}" />
                                                    <Run Text=" - " />
                                                    <Run Text="{Binding [EndDate], Mode=OneWay}" />
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Row 3: Additional Fields -->
                                            <ItemsControl Grid.Row="3"
                                                          ItemsSource="{Binding Converter={StaticResource AdditionalFieldsConverter}}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Style="{StaticResource GlassCaption}" Margin="0,1">
                                                            <Run Text="{Binding Key, Mode=OneWay}" FontWeight="Medium" />
                                                            <Run Text=": " />
                                                            <Run Text="{Binding Value, Mode=OneWay}" />
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Grid>

                <!-- Layer 1: Expanded content overlay (renders on top) -->
                <Border Margin="0,50,0,0" VerticalAlignment="Top" CornerRadius="8">
                    <StackPanel>
                        <!-- Full-width Calendars Content -->
                        <Border CornerRadius="8" Padding="12,8" Margin="0,0,0,8"
                                Background="{DynamicResource GlassBackgroundBrush}"
                                Visibility="{Binding IsCalendarsSectionExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="No calendars available."
                                           Style="{StaticResource GlassBodyMuted}"
                                           Visibility="{Binding CalendarsUnAvailable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <ItemsControl ItemsSource="{Binding Calendars}"
                                              Visibility="{Binding CalendarsAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:CalendarFilterViewModel}">
                                            <ToggleButton Margin="0,0,8,8"
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          Style="{Binding IsOnly, Converter={StaticResource CalendarTypeToStyleConverter}}">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                            Margin="12,0">
                                                    <sharedControls:FluentIcon
                                                        Glyph="{Binding IsOnly, Converter={StaticResource CalendarTypeToIconConverter}}"
                                                        IconSize="24"
                                                        VerticalAlignment="Center"
                                                        Foreground="{Binding IsOnly, Converter={StaticResource CalendarTypeToColorConverter}}" />
                                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="Medium"
                                                                   FontSize="13" />
                                                        <TextBlock Text="{Binding Type}"
                                                                   Style="{StaticResource GlassCaption}"
                                                                   Margin="0,2,0,0" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </ToggleButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Full-width Sources Content -->
                        <Border CornerRadius="8" Padding="12,8" Margin="0,0,0,8"
                                Background="{DynamicResource GlassBackgroundBrush}"
                                Visibility="{Binding IsSourcesSectionExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel>
                                <TextBlock Text="No sources available."
                                           Style="{StaticResource GlassBodyMuted}"
                                           Visibility="{Binding SourcesUnAvailable, Converter={StaticResource BooleanToVisibilityConverter}}" />
                                <!-- Source cards -->
                                <ItemsControl ItemsSource="{Binding Sources}"
                                              Visibility="{Binding SourcesAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:SourceFilterViewModel}">
                                            <ToggleButton Margin="0,0,8,8"
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          IsEnabled="{Binding IsActive}"
                                                          Style="{StaticResource GlassFloatingCardSource}">
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center"
                                                            Margin="12,0">
                                                    <Image Source="{Binding IconPath}"
                                                           Width="24" Height="24"
                                                           VerticalAlignment="Center"
                                                           RenderOptions.BitmapScalingMode="HighQuality" />
                                                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding Name}"
                                                                   FontWeight="Medium"
                                                                   FontSize="13" />
                                                        <TextBlock Text="{Binding Language}"
                                                                   Style="{StaticResource GlassCaption}"
                                                                   Margin="0,2,0,0" />
                                                    </StackPanel>
                                                </StackPanel>
                                            </ToggleButton>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                <!-- Source filters (separate from cards) -->
                                <ItemsControl ItemsSource="{Binding Sources}"
                                              Visibility="{Binding SourcesAvailable, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:SourceFilterViewModel}">
                                            <Border Style="{StaticResource GlassNestedFilterPanel}"
                                                    Margin="0,4,0,0"
                                                    Visibility="{Binding IsSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                <StackPanel
                                                    Visibility="{Binding HasFilters, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="{Binding Name, StringFormat='{}{0} filters:'}"
                                                               Style="{StaticResource GlassCaption}"
                                                               FontWeight="SemiBold"
                                                               Margin="0,0,0,8" />
                                                    <ItemsControl ItemsSource="{Binding FilterFormGroup.Elements}">
                                                        <ItemsControl.ItemsPanel>
                                                            <ItemsPanelTemplate>
                                                                <WrapPanel Orientation="Horizontal" />
                                                            </ItemsPanelTemplate>
                                                        </ItemsControl.ItemsPanel>
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <StackPanel Margin="0,0,15,5" Orientation="Horizontal">
                                                                    <TextBox
                                                                        Width="100"
                                                                        helpers:GlassHint.Hint="{Binding Label}"
                                                                        Style="{StaticResource GlassFloatingHintTextBox}"
                                                                        Text="{Binding TextValue, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                                                        Visibility="{Binding Type, Converter={StaticResource VisibilityConverter}, ConverterParameter=TextBox}"
                                                                        ToolTip="{Binding Label}" />
                                                                    <CheckBox
                                                                        Content="{Binding Label}"
                                                                        Visibility="{Binding Type, Converter={StaticResource VisibilityConverter}, ConverterParameter=CheckBox}"
                                                                        IsChecked="{Binding TextValue, Converter={StaticResource StringToBoolConverter}, Mode=TwoWay}"
                                                                        Style="{StaticResource GlassCheckBox}"
                                                                        ToolTip="{Binding Label}" />
                                                                    <controls:MultiSelectComboBoxView
                                                                        ItemSource="{Binding Options}"
                                                                        Label="{Binding Label}"
                                                                        SelectedItems="{Binding SelectedOptions}"
                                                                        Visibility="{Binding Type, Converter={StaticResource VisibilityConverter}, ConverterParameter=MultiSelect}" />
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Border>

                        <!-- Full-width Global Filters Content -->
                        <Border CornerRadius="8" Padding="12,8" Margin="0,0,0,8"
                                Background="{DynamicResource GlassBackgroundBrush}"
                                Visibility="{Binding IsFiltersSectionExpanded, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBox
                                    Width="200"
                                    helpers:GlassHint.Hint="Search phrase"
                                    Style="{StaticResource GlassFloatingHintTextBox}"
                                    Text="{Binding SearchPhrase, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                    ToolTip="Phrase to look for." />
                                <DatePicker
                                    Width="120"
                                    Margin="15,0,0,0"
                                    Style="{StaticResource GlassDatePicker}"
                                    Text="{Binding StartDate, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=yyyy-MM-dd}"
                                    ToolTip="Start Date" />
                                <DatePicker
                                    Width="120"
                                    Margin="15,0,0,0"
                                    Style="{StaticResource GlassDatePicker}"
                                    Text="{Binding EndDate, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, StringFormat=yyyy-MM-dd}"
                                    ToolTip="End Date" />
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>