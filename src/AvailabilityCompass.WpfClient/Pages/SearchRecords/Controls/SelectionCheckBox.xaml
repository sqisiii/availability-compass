<UserControl x:Class="AvailabilityCompass.WpfClient.Pages.SearchRecords.Controls.SelectionCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="Root">
    <StackPanel Margin="0,0,0,0">
        <!-- Header badge -->
        <Border Height="16"
                MinWidth="40"
                MaxWidth="120"
                Padding="4,1"
                HorizontalAlignment="Center"
                Panel.ZIndex="1"
                Background="{DynamicResource GlassPrimaryBrush}"
                CornerRadius="4">
            <TextBlock Text="{Binding HeaderText, ElementName=Root}"
                       FontSize="10"
                       Foreground="White"
                       HorizontalAlignment="Center" />
        </Border>

        <StackPanel>
            <CheckBox Width="{Binding FullWidth, ElementName=Root}"
                      MinHeight="{Binding FullMinHeight, ElementName=Root}"
                      Margin="0,-10,0,0"
                      IsChecked="{Binding IsChecked, ElementName=Root}"
                      IsEnabled="{Binding IsActive, ElementName=Root}"
                      Style="{StaticResource GlassChipCheckBox}">
                <CheckBox.Content>
                    <WrapPanel>
                        <TextBlock Padding="0,10,0,5"
                                   HorizontalAlignment="Center"
                                   Text="{Binding CheckBoxText, ElementName=Root}"
                                   TextWrapping="Wrap" />
                    </WrapPanel>
                </CheckBox.Content>
            </CheckBox>
        </StackPanel>
    </StackPanel>
</UserControl>
