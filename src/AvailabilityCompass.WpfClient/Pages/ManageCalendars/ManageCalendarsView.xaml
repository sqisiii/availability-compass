<UserControl x:Class="AvailabilityCompass.WpfClient.Pages.ManageCalendarsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModels="clr-namespace:AvailabilityCompass.Core.Features.ManageCalendars;assembly=AvailabilityCompass.Core"
             xmlns:controls1="clr-namespace:AvailabilityCompass.WpfClient.Pages.ManageCalendars.Controls"
             xmlns:converters="clr-namespace:AvailabilityCompass.WpfClient.Pages.ManageCalendars.Converters"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:AvailabilityCompass.WpfClient.Pages.ManageCalendars.Behaviors"
             xmlns:helpers="clr-namespace:AvailabilityCompass.WpfClient.Shared.Helpers"
             xmlns:controls="clr-namespace:AvailabilityCompass.WpfClient.Shared.Controls"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance viewModels:ManageCalendarsViewModel}"
             d:DesignHeight="700"
             d:DesignWidth="1100">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToIndexConverter x:Key="BooleanToIndexConverter" />
    </UserControl.Resources>

    <Border Background="{DynamicResource GlassCardSolidBrush}"
            BorderBrush="{DynamicResource GlassBorderSolidBrush}"
            BorderThickness="1"
            CornerRadius="{DynamicResource GlassRadiusLG}"
            Padding="0"
            MinWidth="1000"
            MaxWidth="1200"
            MaxHeight="750">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource GlassMutedBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Manage Calendars"
                               Style="{StaticResource GlassHeading3}"
                               VerticalAlignment="Center"
                               Margin="0" />

                    <Button Grid.Column="1"
                            Style="{StaticResource GlassIconButton}"
                            Command="{Binding CloseCommand}"
                            ToolTip="Close"
                            Width="32"
                            Height="32">
                        <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                   FontSize="18"
                                   Text="{x:Static controls:FluentIcons.Close}"
                                   Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                    </Button>
                </Grid>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Auto"
                          Padding="8">
                <Border Style="{StaticResource GlassCard}"
                        Margin="5"
                        Padding="5,5,5,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid
                            Grid.Row="0"
                            Grid.Column="0"
                            Grid.ColumnSpan="3"
                            Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Grid.Column="0"
                                Margin="0,10,0,10"
                                HorizontalAlignment="Center"
                                Style="{StaticResource GlassHeading3}"
                                Text="Calendars" />
                            <Button
                                Grid.Row="0"
                                Grid.Column="1"
                                Width="130"
                                HorizontalAlignment="Right"
                                Command="{Binding AddCalendarCommand}"
                                Content="Add Calendar"
                                Style="{StaticResource GlassPrimaryButton}"
                                ToolTip="Add new calendar" />

                            <WrapPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Margin="0,10,0,0"
                                Orientation="Horizontal">
                                <ListBox ItemsSource="{Binding Calendars}">
                                    <ListBox.ItemContainerStyle>
                                        <!--  Style to get rid of the selection visual  -->
                                        <Style TargetType="{x:Type ListBoxItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                                        <ContentPresenter />
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="Margin" Value="5,0,5,5" />
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate DataType="{x:Type viewModels:CalendarViewModel}">
                                            <controls1:SelectionRadioButton
                                                RadioButtonText="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                FullMinHeight="30"
                                                FullWidth="150"
                                                IsActive="True"
                                                GroupName="CalendarGroup"
                                                HeaderText="{Binding Type}"
                                                IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </WrapPanel>
                        </Grid>
                        <Separator Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"
                                   Margin="10,25,10,5"
                                   HorizontalAlignment="Stretch"
                                   Visibility="{Binding Path=IsCalendarSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Background="{DynamicResource GlassPrimaryLightBrush}" />

                        <StackPanel Grid.Row="2" Grid.Column="0" Margin="10,0,0,0"
                                    Visibility="{Binding Path=IsCalendarSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock
                                Margin="10,10,0,10"
                                HorizontalAlignment="Center"
                                Style="{StaticResource GlassHeading3}"
                                Text="Single Day" />
                            <Button
                                Width="80"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Right"
                                Command="{Binding AddSingleDateCommand}"
                                Content="Add"
                                Style="{StaticResource GlassPrimaryButton}"
                                ToolTip="Add new single date" />
                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="True"
                                CanUserResizeColumns="True"
                                CanUserResizeRows="True"
                                CanUserSortColumns="True"
                                IsReadOnly="True"
                                ItemsSource="{Binding SingleDates}"
                                SelectionMode="Single"
                                Style="{StaticResource GlassDataGrid}"
                                VerticalScrollBarVisibility="Auto">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                                    <DataGridTextColumn MinWidth="80" Binding="{Binding Date, StringFormat='yyyy-MM-dd'}"
                                                        Header="Date" />
                                    <DataGridTemplateColumn Width="Auto" Header="Operations">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button
                                                        Padding="5,0"
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditSingleDateCommand}"
                                                        CommandParameter="{Binding SingleDateId}"
                                                        Style="{StaticResource GlassGhostButton}"
                                                        ToolTip="Edit single date"
                                                        Height="28">
                                                        <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                                                   FontSize="14"
                                                                   Text="{x:Static controls:FluentIcons.Edit}" />
                                                    </Button>
                                                    <Button
                                                        Padding="5,0"
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteSingleDateCommand}"
                                                        CommandParameter="{Binding SingleDateId}"
                                                        Style="{StaticResource GlassGhostButton}"
                                                        ToolTip="Delete single date"
                                                        Height="28">
                                                        <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                                                   FontSize="14"
                                                                   Text="{x:Static controls:FluentIcons.Delete}" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>


                        <StackPanel Grid.Row="2" Grid.Column="1" Margin="10,0,0,0"
                                    Visibility="{Binding Path=IsCalendarSelected, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock
                                Margin="10,10,0,10"
                                HorizontalAlignment="Center"
                                Style="{StaticResource GlassHeading3}"
                                Text="Multiple Days and Recurrings" />
                            <Button
                                Width="80"
                                Margin="0,0,0,10"
                                HorizontalAlignment="Right"
                                Command="{Binding AddRecurringDateCommand}"
                                Content="Add"
                                Style="{StaticResource GlassPrimaryButton}"
                                ToolTip="Add new recurring dates" />
                            <DataGrid
                                AutoGenerateColumns="False"
                                CanUserAddRows="False"
                                CanUserDeleteRows="False"
                                CanUserReorderColumns="True"
                                CanUserResizeColumns="True"
                                CanUserResizeRows="True"
                                CanUserSortColumns="True"
                                IsReadOnly="True"
                                ItemsSource="{Binding RecurringDates}"
                                SelectionMode="Single"
                                Style="{StaticResource GlassDataGrid}"
                                VerticalScrollBarVisibility="Auto">
                                <DataGrid.Resources>
                                    <!-- Shared Header Style -->
                                    <Style x:Key="WrappedHeaderStyle" TargetType="DataGridColumnHeader"
                                           BasedOn="{StaticResource GlassDataGridColumnHeader}">
                                        <Setter Property="ContentTemplate">
                                            <Setter.Value>
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding}"
                                                               TextWrapping="Wrap"
                                                               MaxWidth="80"
                                                               HorizontalAlignment="Center"
                                                               TextAlignment="Center" />
                                                </DataTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DataGrid.Resources>
                                <DataGrid.Columns>
                                    <DataGridTextColumn Binding="{Binding StartDate, StringFormat='yyyy-MM-dd'}"
                                                        Header="Start Date" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource WrappedHeaderStyle}"
                                                        Binding="{Binding Description}" Header="Description" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource WrappedHeaderStyle}"
                                                        Binding="{Binding Duration}" Header="Duration in days" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource WrappedHeaderStyle}"
                                                        Binding="{Binding Frequency}" Header="Frequency in days" />
                                    <DataGridTextColumn HeaderStyle="{StaticResource WrappedHeaderStyle}"
                                                        Binding="{Binding NumberOfRepetitions}" Header="Number of repetitions" />

                                    <DataGridTemplateColumn Width="Auto" Header="Operations">

                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button
                                                        Padding="5,0"
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.EditRecurringDateCommand}"
                                                        CommandParameter="{Binding RecurringDateId}"
                                                        Style="{StaticResource GlassGhostButton}"
                                                        ToolTip="Edit recurring dates"
                                                        Height="28">
                                                        <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                                                   FontSize="14"
                                                                   Text="{x:Static controls:FluentIcons.Edit}" />
                                                    </Button>
                                                    <Button
                                                        Padding="5,0"
                                                        Command="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGrid}}, Path=DataContext.DeleteRecurringDateCommand}"
                                                        CommandParameter="{Binding RecurringDateId}"
                                                        Style="{StaticResource GlassGhostButton}"
                                                        ToolTip="Delete recurring dates"
                                                        Height="28">
                                                        <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                                                   FontSize="14"
                                                                   Text="{x:Static controls:FluentIcons.Delete}" />
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                        <Grid
                            Grid.Row="2"
                            Grid.Column="2"
                            Width="350"
                            Visibility="{Binding Path=IsCalendarSelected, Converter={StaticResource BooleanToVisibilityConverter}}"
                            Margin="10, 10, 0, 0">
                            <StackPanel>
                                <Grid HorizontalAlignment="Center">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Calendar:" Margin="10,0,10,0"
                                               HorizontalAlignment="Right"
                                               Style="{StaticResource GlassHeading3}" />
                                    <TextBlock Grid.Column="1" Grid.Row="0"
                                               Margin="0,0,0,10"
                                               HorizontalAlignment="Left"
                                               Style="{StaticResource GlassHeading3}"
                                               Text="{Binding CalendarName}" />

                                </Grid>
                                <ComboBox
                                    IsEnabled="False"
                                    helpers:GlassHint.HelperText="Validity Rule"
                                    SelectedIndex="{Binding CalendarIsOnly, Converter={StaticResource BooleanToIndexConverter}, Mode=OneWay}"
                                    Style="{StaticResource GlassComboBox}">
                                    <ComboBoxItem Content="Allow all dates except those defined in the calendar" IsSelected="True" />
                                    <ComboBoxItem Content="Only allow dates defined in the calendar" />
                                </ComboBox>

                                <Calendar Margin="0,20,0,10"
                                          SelectionMode="None">
                                    <b:Interaction.Behaviors>
                                        <behaviors:CalendarColorBehavior ColorCodedDates="{Binding ReservedDates}" />
                                    </b:Interaction.Behaviors>
                                </Calendar>
                                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" Margin="0,30,0,10">
                                    <Button Width="130"
                                            Margin="0,0,20,0"
                                            HorizontalAlignment="Right"
                                            Command="{Binding UpdateCalendarCommand}"
                                            CommandParameter="{Binding SelectedCalendarId}"
                                            Content="Edit"
                                            Style="{StaticResource GlassPrimaryButton}"
                                            ToolTip="Update calendar's name and role" />
                                    <Button Width="130"
                                            HorizontalAlignment="Right"
                                            Command="{Binding DeleteCalendarCommand}"
                                            CommandParameter="{Binding SelectedCalendarId}"
                                            Content="Delete"
                                            Style="{StaticResource GlassDestructiveButton}"
                                            ToolTip="Delete calendar" />

                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
