<UserControl x:Class="AvailabilityCompass.WpfClient.Pages.ManageCalendars.Dialogs.BaseSingleDateCrudView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:helpers="clr-namespace:AvailabilityCompass.WpfClient.Shared.Helpers"
             xmlns:dialogs="clr-namespace:AvailabilityCompass.Core.Features.ManageCalendars.Dialogs;assembly=AvailabilityCompass.Core"
             x:Name="Root"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=dialogs:AddSingleDateViewModel, IsDesignTimeCreatable=False}">
    <StackPanel Margin="10">
        <TextBlock
            Margin="0,10,0,20"
            HorizontalAlignment="Center"
            Style="{StaticResource GlassHeading3}"
            Text="{Binding ViewHeaderText, ElementName=Root }" />
        <TextBox
            Width="200"
            Margin="0,0,0,10"
            HorizontalAlignment="Left"
            IsEnabled="{Binding IsViewEnabled, ElementName=Root}"
            helpers:GlassHint.Hint="Short Description"
            Style="{StaticResource GlassFloatingHintTextBox}"
            Text="{Binding SelectedItem.Description, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay, ValidatesOnNotifyDataErrors=True}"
            ToolTip="Short description of the selected day" />

        <DatePicker
            Width="120"
            Margin="0,0,0,15"
            HorizontalAlignment="Left"
            IsEnabled="{Binding IsViewEnabled, ElementName=Root}"
            helpers:GlassHint.HelperText="Format: yyyy-MM-dd"
            helpers:GlassHint.Hint="Date"
            Style="{StaticResource GlassDatePicker}"
            Text="{Binding SelectedItem.DateString, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />


        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button
                Margin="0,8,8,0"
                Command="{Binding SaveCommand}"
                Content="{Binding SaveCommandPrompt, ElementName=Root}"
                IsDefault="True"
                Style="{StaticResource GlassPrimaryButton}">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                        True
                    </system:Boolean>
                </Button.CommandParameter>
            </Button>
            <Button
                Margin="0,8,8,0"
                Command="{Binding CloseCommand}"
                Content="CANCEL"
                IsCancel="True"
                Style="{StaticResource GlassOutlineButton}">
                <Button.CommandParameter>
                    <system:Boolean xmlns:system="clr-namespace:System;assembly=mscorlib">
                        False
                    </system:Boolean>
                </Button.CommandParameter>
            </Button>
        </StackPanel>

    </StackPanel>
</UserControl>