<Window x:Class="AvailabilityCompass.WpfClient.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:AvailabilityCompass.WpfClient.Pages"
        xmlns:controls="clr-namespace:AvailabilityCompass.WpfClient.Shared.Controls"
        Width="1360"
        Height="950"
        ResizeMode="CanResizeWithGrip"
        WindowStartupLocation="CenterScreen"
        FontFamily="{DynamicResource GlassFontFamily}"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{DynamicResource GlassBackgroundBrush}"
        Loaded="MainWindow_Loaded"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel}"
        mc:Ignorable="d">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>

    <Border BorderThickness="1"
            BorderBrush="{DynamicResource GlassBorderSolidBrush}"
            CornerRadius="{DynamicResource GlassWindowRadius}"
            Background="{DynamicResource GlassBackgroundBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="56" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header / Toolbar -->
            <Border Grid.Row="0"
                    Background="{DynamicResource GlassCardSolidBrush}"
                    BorderBrush="{DynamicResource GlassBorderSolidBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="{DynamicResource GlassWindowTopRadius}"
                    MouseEnter="ControlBar_MouseEnter"
                    MouseLeftButtonDown="ControlBar_MouseLeftButtonDown">
                <Grid Margin="16,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!-- Logo and App Name -->
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Image Height="28"
                               Source="/Images/logo.png"
                               RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Margin="12,0,0,0"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource GlassForegroundBrush}"
                                   Text="Availability Compass" />
                    </StackPanel>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Column="2"
                                Orientation="Horizontal"
                                VerticalAlignment="Center"
                                Margin="0,0,16,0">

                        <!-- Theme Toggle -->
                        <Button Style="{StaticResource GlassGhostButton}"
                                Command="{Binding ToggleThemeCommand}"
                                ToolTip="Toggle theme"
                                Padding="8"
                                Width="36"
                                Height="36">
                            <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                       FontSize="18"
                                       Text="{Binding ThemeIcon}"
                                       Foreground="{DynamicResource GlassForegroundBrush}" />
                        </Button>

                        <Rectangle Width="1"
                                   Height="24"
                                   Fill="{DynamicResource GlassBorderSolidBrush}"
                                   Margin="8,0" />

                        <!-- Calendars Button -->
                        <Button Style="{StaticResource GlassToolbarButton}"
                                Command="{Binding OpenCalendarsCommand}"
                                ToolTip="Manage calendars">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                           FontSize="16"
                                           Text="{x:Static controls:FluentIcons.Calendar}"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource GlassForegroundBrush}" />
                                <TextBlock Text="Calendars"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource GlassForegroundBrush}" />
                            </StackPanel>
                        </Button>

                        <!-- Sources Button -->
                        <Button Style="{StaticResource GlassToolbarButton}"
                                Command="{Binding OpenSourcesCommand}"
                                ToolTip="Manage sources"
                                Margin="4,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                           FontSize="16"
                                           Text="{x:Static controls:FluentIcons.Database}"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource GlassForegroundBrush}" />
                                <TextBlock Text="Sources"
                                           Margin="6,0,0,0"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource GlassForegroundBrush}" />
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <!-- Window Control Buttons -->
                    <StackPanel Grid.Column="3"
                                Orientation="Horizontal"
                                VerticalAlignment="Center">
                        <Button Style="{StaticResource GlassIconButton}"
                                Click="BtnMinimize_Click"
                                ToolTip="Minimize"
                                Width="32"
                                Height="32">
                            <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                       FontSize="16"
                                       Text="{x:Static controls:FluentIcons.ChromeMinimize}"
                                       Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                        </Button>
                        <Button x:Name="BtnMaximize"
                                Style="{StaticResource GlassIconButton}"
                                Click="BtnMaximize_Click"
                                Command="{Binding MaximizeButtonPressedCommand}"
                                ToolTip="{Binding MaximizeToolTip}"
                                Width="32"
                                Height="32">
                            <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                       FontSize="16"
                                       Text="{Binding MaximizeIcon}"
                                       Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                        </Button>
                        <Button Style="{StaticResource GlassIconButton}"
                                Click="BtnClose_Click"
                                ToolTip="Close"
                                Width="32"
                                Height="32">
                            <TextBlock FontFamily="{DynamicResource GlassIconFontFamily}"
                                       FontSize="16"
                                       Text="{x:Static controls:FluentIcons.Close}"
                                       Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <!-- Search View Content -->
                <ContentControl Margin="16"
                                Content="{Binding SearchViewModel}" />

                <!-- Dialog Overlay -->
                <Border x:Name="DialogOverlay"
                        Background="{DynamicResource GlassOverlayBrush}"
                        Visibility="{Binding IsDialogOpen, Converter={StaticResource BooleanToVisibilityConverter}}"
                        MouseDown="DialogOverlay_MouseDown">
                    <Border Style="{StaticResource GlassDialogCard}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            MinWidth="400"
                            MaxWidth="1200"
                            MaxHeight="800"
                            Margin="40"
                            MouseDown="DialogContent_MouseDown">
                        <ContentControl Content="{Binding CurrentDialogViewModel}" />
                    </Border>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
