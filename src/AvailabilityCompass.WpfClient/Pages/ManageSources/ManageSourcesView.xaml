<UserControl x:Class="AvailabilityCompass.WpfClient.Pages.ManageSourcesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:manageSources="clr-namespace:AvailabilityCompass.Core.Features.ManageSources;assembly=AvailabilityCompass.Core"
             xmlns:converters="clr-namespace:AvailabilityCompass.WpfClient.Shared.Converters"
             xmlns:controls="clr-namespace:AvailabilityCompass.WpfClient.Shared.Controls"
             d:DataContext="{d:DesignInstance manageSources:ManageSourcesViewModel, IsDesignTimeCreatable=True}"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="900">
    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <converters:BooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" Invert="True" />
        <converters:DoubleToPercentageConverter x:Key="DoubleToPercentageConverter" />
    </UserControl.Resources>

    <Border Style="{StaticResource GlassCard}"
            Padding="0"
            MinWidth="800"
            MaxWidth="1000"
            MaxHeight="600">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    Background="{DynamicResource GlassSurfaceBrush}"
                    CornerRadius="12,12,0,0"
                    Padding="20,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Manage Sources"
                               Style="{StaticResource GlassHeading3}"
                               VerticalAlignment="Center" />

                    <Button Grid.Column="1"
                            Content="Refresh All"
                            Width="120"
                            Margin="0,0,12,0"
                            Style="{StaticResource GlassSecondaryButton}"
                            ToolTip="Refresh available trips data"
                            Command="{Binding RefreshAllSourcesCommand}" />

                    <Button Grid.Column="2"
                            Style="{StaticResource GlassIconButton}"
                            Command="{Binding CloseCommand}"
                            ToolTip="Close"
                            Width="32"
                            Height="32">
                        <TextBlock FontFamily="{StaticResource GlassIconFontFamily}"
                                   FontSize="16"
                                   Text="{x:Static controls:FluentIcons.Close}"
                                   Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                    </Button>
                </Grid>
            </Border>

            <!-- Card Grid -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          Padding="8">
                <ItemsControl ItemsSource="{Binding Sources}"
                              Margin="8">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- Source Card -->
                            <Border Width="260"
                                    MinHeight="160"
                                    Margin="8"
                                    CornerRadius="12"
                                    Padding="16"
                                    Background="{DynamicResource GlassCardBrush}"
                                    BorderBrush="{DynamicResource GlassBorderSolidBrush}"
                                    BorderThickness="1">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush"
                                                        Value="{DynamicResource GlassPrimaryBrush}" />
                                                <Setter Property="Background"
                                                        Value="{DynamicResource GlassPrimaryLightBrush}" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <!-- Row 0: Header with Name and Language -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   Style="{StaticResource GlassBody}"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center" />
                                        <TextBlock Grid.Column="1"
                                                   Text="{Binding Language}"
                                                   Style="{StaticResource GlassCaption}"
                                                   Foreground="{DynamicResource GlassMutedForegroundBrush}"
                                                   VerticalAlignment="Center" />
                                    </Grid>

                                    <!-- Row 1: Stats -->
                                    <StackPanel Grid.Row="1" Margin="0,12,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <controls:FluentIcon
                                                Glyph="{x:Static controls:FluentIcons.Database}"
                                                IconSize="14"
                                                Margin="0,0,6,0"
                                                Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                                            <TextBlock Style="{StaticResource GlassCaption}">
                                                <Run Text="{Binding TripsCount, StringFormat='{}{0:N0}'}" />
                                                <Run Text=" records" />
                                            </TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,6,0,0">
                                            <controls:FluentIcon
                                                Glyph="{x:Static controls:FluentIcons.Clock}"
                                                IconSize="14"
                                                Margin="0,0,6,0"
                                                Foreground="{DynamicResource GlassMutedForegroundBrush}" />
                                            <TextBlock Style="{StaticResource GlassCaption}"
                                                       Text="{Binding ChangedAt, StringFormat='yyyy-MM-dd HH:mm',
                                                              TargetNullValue='Never updated'}" />
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Row 2: Actions -->
                                    <Grid Grid.Row="2" Margin="0,16,0,0">
                                        <!-- Progress bar (visible when refreshing) -->
                                        <Grid Visibility="{Binding ShowProgress,
                                              Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <ProgressBar Value="{Binding ProgressPercent}"
                                                         Height="28"
                                                         Background="{DynamicResource GlassSurfaceBrush}"
                                                         Foreground="{DynamicResource GlassPrimaryBrush}" />
                                            <TextBlock Text="{Binding ProgressPercent,
                                                       Converter={StaticResource DoubleToPercentageConverter}}"
                                                       HorizontalAlignment="Center"
                                                       VerticalAlignment="Center"
                                                       Style="{StaticResource GlassCaption}"
                                                       FontWeight="SemiBold"
                                                       Foreground="{DynamicResource GlassForegroundBrush}" />
                                        </Grid>

                                        <!-- Refresh button (visible when idle) -->
                                        <Button Content="Refresh"
                                                HorizontalAlignment="Stretch"
                                                Visibility="{Binding ShowProgress,
                                                Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                                                Command="{Binding DataContext.RefreshSourceCommand,
                                                          RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding SourceId}"
                                                Style="{StaticResource GlassSecondaryButton}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
