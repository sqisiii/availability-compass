<UserControl x:Class="AvailabilityCompass.WpfClient.Pages.ManageSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:manageSettings="clr-namespace:AvailabilityCompass.Core.Features.ManageSettings;assembly=AvailabilityCompass.Core"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=manageSettings:ManageSettingsViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Border Style="{StaticResource GlassCard}"
            Margin="5"
            Padding="5,5,5,15">
        <StackPanel>
            <!-- Section Header -->
            <Border Background="{DynamicResource GlassPrimaryBrush}"
                    CornerRadius="6"
                    Padding="12,6"
                    Margin="10,0,0,0"
                    HorizontalAlignment="Left">
                <TextBlock Text="Base Theme"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Style="{StaticResource GlassBody}" />
            </Border>

            <!-- Theme Toggle -->
            <StackPanel Margin="0,15,0,0"
                        Orientation="Horizontal">
                <TextBlock Margin="10,4,16,4"
                           HorizontalAlignment="Left"
                           Style="{StaticResource GlassBody}"
                           Text="Light"
                           ToolTip="Set Light Mode" />

                <!-- Custom Glass Toggle Switch -->
                <ToggleButton Width="50"
                              Height="26"
                              HorizontalAlignment="Right"
                              IsChecked="{Binding IsThemeDark, Mode=TwoWay}"
                              ToolTip="Switch between dark and light theme">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="ToggleButton">
                            <Grid>
                                <Border x:Name="Track"
                                        Background="{DynamicResource GlassSurfaceBrush}"
                                        BorderBrush="{DynamicResource GlassBorderBrush}"
                                        BorderThickness="1"
                                        CornerRadius="13"
                                        Height="26"
                                        Width="50">
                                </Border>
                                <Border x:Name="Thumb"
                                        Background="{DynamicResource GlassMutedForegroundBrush}"
                                        CornerRadius="10"
                                        Height="20"
                                        Width="20"
                                        HorizontalAlignment="Left"
                                        Margin="3,0,0,0">
                                    <Border.RenderTransform>
                                        <TranslateTransform x:Name="ThumbTranslate" X="0"/>
                                    </Border.RenderTransform>
                                </Border>
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Track" Property="Background" Value="{DynamicResource GlassPrimaryBrush}"/>
                                    <Setter TargetName="Thumb" Property="Background" Value="White"/>
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ThumbTranslate"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="24" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="ThumbTranslate"
                                                                 Storyboard.TargetProperty="X"
                                                                 To="0" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Track" Property="BorderBrush" Value="{DynamicResource GlassPrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>

                <TextBlock Margin="10,4,16,4"
                           HorizontalAlignment="Left"
                           Style="{StaticResource GlassBody}"
                           Text="Dark"
                           ToolTip="Set Dark Mode" />
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>
