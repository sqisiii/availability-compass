<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ========================================== -->
    <!-- SAGE + WARM GRAY LIGHT THEME               -->
    <!-- Calm, earthy palette with muted sage       -->
    <!-- ========================================== -->

    <!-- Background Colors -->
    <Color x:Key="GlassBackgroundColor">#FAFAF8</Color>
    <Color x:Key="GlassSurfaceColor">#F5F5F3</Color>

    <!-- Card Colors -->
    <Color x:Key="GlassCardColor">#FFFFFF</Color>
    <Color x:Key="GlassCardSolidColor">#FFFFFF</Color>
    <Color x:Key="GlassBorderColor">#E5E5E0</Color>
    <Color x:Key="GlassHighlightColor">#FAFAF8</Color>
    <Color x:Key="GlassOverlayColor">#802A2A2A</Color>

    <!-- Text Colors -->
    <Color x:Key="GlassForegroundColor">#1A1A1A</Color>
    <Color x:Key="GlassMutedForegroundColor">#6B6B6B</Color>
    <Color x:Key="GlassSubtleForegroundColor">#9CA3AF</Color>

    <!-- Primary Accent - Sage -->
    <Color x:Key="GlassPrimaryColor">#6B8E7C</Color>
    <Color x:Key="GlassPrimaryHoverColor">#5A7A6A</Color>
    <Color x:Key="GlassPrimaryLightColor">#EDF3EF</Color>
    <Color x:Key="GlassPrimaryForegroundColor">#FFFFFF</Color>

    <!-- Secondary - Warm Gray -->
    <Color x:Key="GlassSecondaryColor">#6B6B6B</Color>
    <Color x:Key="GlassSecondaryHoverColor">#5A5A5A</Color>
    <Color x:Key="GlassSecondaryForegroundColor">#FFFFFF</Color>

    <!-- Accent - Taupe -->
    <Color x:Key="GlassAccentColor">#9D8B7A</Color>
    <Color x:Key="GlassAccentHoverColor">#8A7A6A</Color>
    <Color x:Key="GlassAccentForegroundColor">#FFFFFF</Color>

    <!-- Semantic Colors -->
    <Color x:Key="GlassDestructiveColor">#DC2626</Color>
    <Color x:Key="GlassDestructiveHoverColor">#B91C1C</Color>
    <Color x:Key="GlassDestructiveForegroundColor">#FFFFFF</Color>
    <Color x:Key="GlassSuccessColor">#16A34A</Color>
    <Color x:Key="GlassWarningColor">#6B8E7C</Color>

    <!-- Border and Input -->
    <Color x:Key="GlassBorderSolidColor">#E5E5E0</Color>
    <Color x:Key="GlassInputColor">#FFFFFF</Color>
    <Color x:Key="GlassInputBorderColor">#D1D1CC</Color>
    <Color x:Key="GlassRingColor">#6B8E7C</Color>

    <!-- Shadow Colors -->
    <Color x:Key="GlassShadowColor">#1A6B6B6B</Color>
    <Color x:Key="GlassShadowDarkColor">#20000000</Color>

    <!-- Muted/Disabled -->
    <Color x:Key="GlassMutedColor">#F5F5F3</Color>
    <Color x:Key="GlassDisabledColor">#9CA3AF</Color>

    <!-- ========================================== -->
    <!-- SOLID COLOR BRUSHES                        -->
    <!-- ========================================== -->

    <!-- Background Brushes -->
    <SolidColorBrush x:Key="GlassBackgroundBrush" Color="{DynamicResource GlassBackgroundColor}" />
    <SolidColorBrush x:Key="GlassSurfaceBrush" Color="{DynamicResource GlassSurfaceColor}" />
    <SolidColorBrush x:Key="GlassCardBrush" Color="{DynamicResource GlassCardColor}" />
    <SolidColorBrush x:Key="GlassCardSolidBrush" Color="{DynamicResource GlassCardSolidColor}" />
    <SolidColorBrush x:Key="GlassBorderBrush" Color="{DynamicResource GlassBorderColor}" />
    <SolidColorBrush x:Key="GlassHighlightBrush" Color="{DynamicResource GlassHighlightColor}" />
    <SolidColorBrush x:Key="GlassOverlayBrush" Color="{DynamicResource GlassOverlayColor}" />

    <!-- Text Brushes -->
    <SolidColorBrush x:Key="GlassForegroundBrush" Color="{DynamicResource GlassForegroundColor}" />
    <SolidColorBrush x:Key="GlassMutedForegroundBrush" Color="{DynamicResource GlassMutedForegroundColor}" />
    <SolidColorBrush x:Key="GlassSubtleForegroundBrush" Color="{DynamicResource GlassSubtleForegroundColor}" />

    <!-- Primary Brushes -->
    <SolidColorBrush x:Key="GlassPrimaryBrush" Color="{DynamicResource GlassPrimaryColor}" />
    <SolidColorBrush x:Key="GlassPrimaryHoverBrush" Color="{DynamicResource GlassPrimaryHoverColor}" />
    <SolidColorBrush x:Key="GlassPrimaryLightBrush" Color="{DynamicResource GlassPrimaryLightColor}" />
    <SolidColorBrush x:Key="GlassPrimaryForegroundBrush" Color="{DynamicResource GlassPrimaryForegroundColor}" />

    <!-- Secondary Brushes -->
    <SolidColorBrush x:Key="GlassSecondaryBrush" Color="{DynamicResource GlassSecondaryColor}" />
    <SolidColorBrush x:Key="GlassSecondaryHoverBrush" Color="{DynamicResource GlassSecondaryHoverColor}" />
    <SolidColorBrush x:Key="GlassSecondaryForegroundBrush" Color="{DynamicResource GlassSecondaryForegroundColor}" />

    <!-- Accent Brushes -->
    <SolidColorBrush x:Key="GlassAccentBrush" Color="{DynamicResource GlassAccentColor}" />
    <SolidColorBrush x:Key="GlassAccentHoverBrush" Color="{DynamicResource GlassAccentHoverColor}" />
    <SolidColorBrush x:Key="GlassAccentForegroundBrush" Color="{DynamicResource GlassAccentForegroundColor}" />
    <SolidColorBrush x:Key="GlassAccentLightBrush" Color="#F5F0ED" />

    <!-- Semantic Brushes -->
    <SolidColorBrush x:Key="GlassDestructiveBrush" Color="{DynamicResource GlassDestructiveColor}" />
    <SolidColorBrush x:Key="GlassDestructiveHoverBrush" Color="{DynamicResource GlassDestructiveHoverColor}" />
    <SolidColorBrush x:Key="GlassDestructiveForegroundBrush" Color="{DynamicResource GlassDestructiveForegroundColor}" />
    <SolidColorBrush x:Key="GlassSuccessBrush" Color="{DynamicResource GlassSuccessColor}" />
    <SolidColorBrush x:Key="GlassSuccessLightBrush" Color="{DynamicResource GlassSuccessColor}" Opacity="0.1" />
    <SolidColorBrush x:Key="GlassWarningBrush" Color="{DynamicResource GlassWarningColor}" />

    <!-- Border and Input Brushes -->
    <SolidColorBrush x:Key="GlassBorderSolidBrush" Color="{DynamicResource GlassBorderSolidColor}" />
    <SolidColorBrush x:Key="GlassInputBrush" Color="{DynamicResource GlassInputColor}" />
    <SolidColorBrush x:Key="GlassInputBorderBrush" Color="{DynamicResource GlassInputBorderColor}" />
    <SolidColorBrush x:Key="GlassRingBrush" Color="{DynamicResource GlassRingColor}" />

    <!-- Muted Brushes -->
    <SolidColorBrush x:Key="GlassMutedBrush" Color="{DynamicResource GlassMutedColor}" />
    <SolidColorBrush x:Key="GlassDisabledBrush" Color="{DynamicResource GlassDisabledColor}" />

    <!-- ========================================== -->
    <!-- GRADIENT BRUSHES                           -->
    <!-- ========================================== -->

    <!-- Primary Gradient (Amber) -->
    <LinearGradientBrush x:Key="GlassPrimaryGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="{DynamicResource GlassPrimaryColor}" Offset="0" />
        <GradientStop Color="{DynamicResource GlassPrimaryHoverColor}" Offset="1" />
    </LinearGradientBrush>

    <!-- Card Gradient -->
    <LinearGradientBrush x:Key="GlassCardGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FFFFFF" Offset="0" />
        <GradientStop Color="#FAFAF9" Offset="1" />
    </LinearGradientBrush>

    <!-- Highlight Gradient (Top edge shine) -->
    <LinearGradientBrush x:Key="GlassHighlightGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#20FFFFFF" Offset="0" />
        <GradientStop Color="#00FFFFFF" Offset="0.5" />
    </LinearGradientBrush>

    <!-- Header/Toolbar Gradient -->
    <LinearGradientBrush x:Key="GlassHeaderGradientBrush" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="#FAFAF9" Offset="0" />
        <GradientStop Color="#F5F5F4" Offset="1" />
    </LinearGradientBrush>

</ResourceDictionary>
