    <!-- ========================================== -->
    <!-- BUTTON STYLES                              -->
    <!-- ========================================== -->

    <!-- Base Button Style -->
    <Style x:Key="GlassButtonBase" TargetType="Button">
        <Setter Property="FontFamily" Value="{DynamicResource GlassFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource GlassFontSize}" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="Height" Value="{DynamicResource GlassButtonHeight}" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
    </Style>

    <!-- Primary Button - Gradient with a glow -->
    <Style x:Key="GlassPrimaryButton" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            CornerRadius="{DynamicResource GlassRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="{DynamicResource GlassPrimaryColor}" Offset="0" />
                                <GradientStop Color="{DynamicResource GlassSecondaryColor}" Offset="1" />
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="16"
                                              ShadowDepth="4"
                                              Direction="270"
                                              Opacity="0.3"
                                              Color="{DynamicResource GlassPrimaryColor}" />
                        </Border.Effect>
                        <Border.RenderTransform>
                            <TranslateTransform x:Name="TranslateTransform" Y="0" />
                        </Border.RenderTransform>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="-2" />
                                </Setter.Value>
                            </Setter>
                            <Setter TargetName="PART_Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="24"
                                                      ShadowDepth="8"
                                                      Direction="270"
                                                      Opacity="0.4"
                                                      Color="{DynamicResource GlassPrimaryColor}" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="RenderTransform">
                                <Setter.Value>
                                    <TranslateTransform Y="1" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Secondary Button -->
    <Style x:Key="GlassSecondaryButton" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background" Value="{DynamicResource GlassMutedBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassInputBorderBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassBorderSolidBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Outline Button -->
    <Style x:Key="GlassOutlineButton" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderSolidBrush}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassMutedBrush}" />
                            <Setter TargetName="PART_Border" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassInputBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Ghost Button -->
    <Style x:Key="GlassGhostButton" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassMutedBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassInputBorderBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Destructive Button -->
    <Style x:Key="GlassDestructiveButton" TargetType="Button" BasedOn="{StaticResource GlassButtonBase}">
        <Setter Property="Background" Value="{DynamicResource GlassDestructiveBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            Padding="{TemplateBinding Padding}"
                            SnapsToDevicePixels="True">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12"
                                              ShadowDepth="2"
                                              Direction="270"
                                              Opacity="0.25"
                                              Color="{DynamicResource GlassDestructiveColor}" />
                        </Border.Effect>
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassDestructiveHoverBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Icon Button -->
    <Style x:Key="GlassIconButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            SnapsToDevicePixels="True">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassMutedBrush}" />
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="PART_Border" Property="Background"
                                    Value="{DynamicResource GlassInputBorderBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Toolbar Button -->
    <Style x:Key="GlassToolbarButton" TargetType="Button" BasedOn="{StaticResource GlassGhostButton}">
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <!-- ========================================== -->
    <!-- TEXTBOX STYLES                             -->
    <!-- ========================================== -->

    <Style x:Key="GlassTextBox" TargetType="TextBox">
        <Setter Property="FontFamily" Value="{DynamicResource GlassFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource GlassFontSize}" />
        <Setter Property="Background" Value="{DynamicResource GlassInputBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassInputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="CaretBrush" Value="{DynamicResource GlassPrimaryBrush}" />
        <Setter Property="SelectionBrush" Value="{DynamicResource GlassPrimaryLightBrush}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            SnapsToDevicePixels="True">
                        <ScrollViewer x:Name="PART_ContentHost"
                                      Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                            <Setter TargetName="PART_Border" Property="BorderThickness" Value="2" />
                            <Setter TargetName="PART_Border" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect BlurRadius="8"
                                                      ShadowDepth="0"
                                                      Opacity="0.2"
                                                      Color="{DynamicResource GlassPrimaryColor}" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- TextBox with Placeholder Hint (simplified, not floating) -->
    <Style x:Key="GlassFloatingHintTextBox" TargetType="TextBox" BasedOn="{StaticResource GlassTextBox}">
        <Setter Property="Padding" Value="10,8" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="PART_Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="{DynamicResource GlassRadius}"
                            SnapsToDevicePixels="True">
                        <Grid Margin="{TemplateBinding Padding}">
                            <!-- Placeholder (visible when no text) -->
                            <TextBlock x:Name="PART_Placeholder"
                                       Text="{Binding (helpers:GlassHint.Hint), RelativeSource={RelativeSource TemplatedParent}}"
                                       Foreground="{DynamicResource GlassMutedForegroundBrush}"
                                       FontSize="{DynamicResource GlassFontSize}"
                                       VerticalAlignment="Center"
                                       IsHitTestVisible="False"
                                       Visibility="Collapsed" />

                            <!-- Content -->
                            <ScrollViewer x:Name="PART_ContentHost"
                                          VerticalAlignment="Center" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Show placeholder when empty -->
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <!-- Hide placeholder when focused -->
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="PART_Placeholder" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_Border" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                            <Setter TargetName="PART_Border" Property="BorderThickness" Value="2" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

