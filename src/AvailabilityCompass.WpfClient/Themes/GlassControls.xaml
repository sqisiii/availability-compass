                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <!-- Highlight border at the top -->
                                <Border CornerRadius="11,11,0,0"
                                        Height="1"
                                        VerticalAlignment="Top"
                                        Margin="1,1,1,0"
                                        Background="{DynamicResource GlassHighlightGradientBrush}" />
                                <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center" />
                            </Grid>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                            <Setter TargetName="ShadowBorder" Property="Effect">
                                <Setter.Value>
                                    <DropShadowEffect Color="{DynamicResource GlassPrimaryColor}"
                                                      BlurRadius="20"
                                                      ShadowDepth="0"
                                                      Opacity="0.4" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MainBorder" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Calendar Include (IsOnly=true) floating card with green tint when selected -->
    <Style x:Key="GlassFloatingCardInclude" TargetType="ToggleButton" BasedOn="{StaticResource GlassFloatingCard}">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{DynamicResource GlassSuccessLightBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Calendar Exclude (IsOnly=false) floating card with amber tint when selected -->
    <Style x:Key="GlassFloatingCardExclude" TargetType="ToggleButton" BasedOn="{StaticResource GlassFloatingCard}">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{DynamicResource GlassPrimaryLightBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Source floating card with teal tint when selected -->
    <Style x:Key="GlassFloatingCardSource" TargetType="ToggleButton" BasedOn="{StaticResource GlassFloatingCard}">
        <Style.Triggers>
            <Trigger Property="IsChecked" Value="True">
                <Setter Property="Background" Value="{DynamicResource GlassAccentLightBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ========================================== -->
    <!-- COLLAPSIBLE SECTION STYLES                 -->
    <!-- ========================================== -->

    <!-- Summary chip for collapsed sections -->
    <Style x:Key="GlassSummaryChip" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource GlassMutedBrush}" />
        <Setter Property="CornerRadius" Value="12" />
        <Setter Property="Padding" Value="12,4" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>

    <!-- Nested filter panel for source-specific filters -->
    <Style x:Key="GlassNestedFilterPanel" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource GlassCardBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassBorderSolidBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="8" />
        <Setter Property="Padding" Value="12,8" />
        <Setter Property="Margin" Value="0,4,0,8" />
    </Style>

    <!-- CollapsibleSection control style -->
    <Style TargetType="{x:Type controls:CollapsibleSection}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:CollapsibleSection}">
                    <Border CornerRadius="8" Padding="4">
                        <StackPanel>
                            <!-- Header with toggle - fixed height -->
                            <ToggleButton x:Name="PART_HeaderToggle"
                                          IsChecked="{Binding IsExpanded, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          Cursor="Hand"
                                          HorizontalContentAlignment="Stretch"
                                          MinHeight="36"
                                          Padding="0,8">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                Padding="{TemplateBinding Padding}"
                                                CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="{DynamicResource GlassMutedBrush}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!-- Expand/Collapse Icon -->
                                    <controls:FluentIcon x:Name="PART_ExpandIcon"
                                                         Grid.Column="0"
                                                         Glyph="{x:Static controls:FluentIcons.ChevronDown}"
                                                         IconSize="12"
                                                         Foreground="{DynamicResource GlassMutedForegroundBrush}"
                                                         Margin="0,0,8,0"
                                                         RenderTransformOrigin="0.5,0.5">
                                        <controls:FluentIcon.RenderTransform>
                                            <RotateTransform x:Name="IconRotation" Angle="0" />
                                        </controls:FluentIcon.RenderTransform>
                                    </controls:FluentIcon>

                                    <!-- Section Title -->
                                    <TextBlock Grid.Column="1"
                                               Text="{TemplateBinding Header}"
                                               Style="{StaticResource GlassBody}"
                                               FontWeight="SemiBold"
                                               VerticalAlignment="Center" />

                                    <!-- Summary Chips (visible when collapsed) -->
                                    <Border x:Name="PART_SummaryChips"
                                            Grid.Column="2"
                                            Background="{DynamicResource GlassMutedBrush}"
                                            CornerRadius="12"
                                            Padding="12,4"
                                            Margin="12,0,0,0"
                                            HorizontalAlignment="Left"
                                            Visibility="Collapsed">
                                        <TextBlock x:Name="PART_SummaryText"
                                                   Text="{TemplateBinding Summary}"
                                                   Style="{StaticResource GlassCaption}"
                                                   Foreground="{DynamicResource GlassForegroundBrush}"
                                                   MaxWidth="400"
                                                   TextTrimming="CharacterEllipsis" />
                                    </Border>
                                </Grid>
                            </ToggleButton>

                            <!-- Content Area -->
                            <Border x:Name="PART_ContentArea"
                                    Margin="20,8,0,0">
                                <ContentPresenter />
                            </Border>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="PART_ContentArea" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_SummaryChips" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_ExpandIcon" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="-90" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                        <!-- When HasSelection is true, use accent color for the chip -->
                        <Trigger Property="HasSelection" Value="True">
                            <Setter TargetName="PART_SummaryChips" Property="Background" Value="{DynamicResource GlassAccentLightBrush}" />
                            <Setter TargetName="PART_SummaryText" Property="Foreground" Value="{DynamicResource GlassPrimaryBrush}" />
                            <Setter TargetName="PART_SummaryText" Property="FontWeight" Value="SemiBold" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>