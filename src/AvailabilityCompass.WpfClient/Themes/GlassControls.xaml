    <!-- COMBOBOX STYLES                            -->
    <!-- ========================================== -->

    <Style x:Key="GlassComboBox" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{DynamicResource GlassFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource GlassFontSize}" />
        <Setter Property="Background" Value="{DynamicResource GlassInputBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassInputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="12,10" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- ComboBox with Label (simplified, shows selected value) -->
    <Style x:Key="GlassFloatingHintComboBox" TargetType="ComboBox">
        <Setter Property="FontFamily" Value="{DynamicResource GlassFontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource GlassFontSize}" />
        <Setter Property="Background" Value="{DynamicResource GlassInputBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource GlassForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource GlassInputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,8,30,8" />
        <Setter Property="MinHeight" Value="36" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="PART_Border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="{DynamicResource GlassRadius}"
                                SnapsToDevicePixels="True">
                            <Grid>
                                <!-- Selected value display -->
                                <TextBlock x:Name="ContentSite"
                                           Text="{TemplateBinding Text}"
                                           Foreground="{TemplateBinding Foreground}"
                                           Margin="{TemplateBinding Padding}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                           IsHitTestVisible="False" />

                                <!-- Editable TextBox (hidden by default) -->
                                <TextBox x:Name="PART_EditableTextBox"
                                         Style="{x:Null}"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         Margin="{TemplateBinding Padding}"
                                         Focusable="True"
                                         Background="Transparent"
                                         Foreground="{TemplateBinding Foreground}"
                                         Visibility="Hidden"
                                         IsReadOnly="{TemplateBinding IsReadOnly}" />

                                <!-- Dropdown Arrow -->
                                <TextBlock x:Name="PART_Arrow"
                                           Text="{x:Static controls:FluentIcons.ChevronDown}"
                                           FontFamily="{DynamicResource GlassIconFontFamily}"
                                           FontSize="12"
                                           Foreground="{DynamicResource GlassMutedForegroundBrush}"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Right"
                                           Margin="0,0,10,0"
                                           IsHitTestVisible="False" />
                            </Grid>
                        </Border>

                        <!-- Dropdown Popup -->
                        <Popup x:Name="PART_Popup"
                               Grid.Column="0"
                               Placement="Bottom"
                               IsOpen="{TemplateBinding IsDropDownOpen}"
                               AllowsTransparency="True"
                               Focusable="False"
                               PopupAnimation="Slide">
                            <Grid x:Name="DropDown"
                                  SnapsToDevicePixels="True"
                                  MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                <Border x:Name="DropDownBorder"
                                        Background="{DynamicResource GlassCardSolidBrush}"
                                        BorderBrush="{DynamicResource GlassBorderSolidBrush}"
                                        BorderThickness="1"
                                        CornerRadius="{DynamicResource GlassRadius}"
                                        Margin="0,2,0,0"
                                        Effect="{DynamicResource GlassShadowMD}">
                                    <ScrollViewer Margin="4"
                                                  SnapsToDevicePixels="True"
                                                  VerticalScrollBarVisibility="Auto"
                                                  HorizontalScrollBarVisibility="Disabled">
                                        <StackPanel IsItemsHost="True"
                                                    KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>

                        <!-- Toggle Button (invisible, covers entire control) -->
                        <ToggleButton x:Name="ToggleButton"
                                      Grid.Column="0"
                                      Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border Background="Transparent" />
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsDropDownOpen" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                            <Setter TargetName="PART_Border" Property="BorderThickness" Value="2" />
                            <Setter Property="Padding" Value="9,7,29,7" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush"
                                    Value="{DynamicResource GlassPrimaryBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="PART_Border" Property="Opacity" Value="0.5" />
                        </Trigger>
                        <Trigger Property="IsEditable" Value="True">
                            <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ComboBoxItem style for GlassFloatingHintComboBox -->
    <Style x:Key="GlassComboBoxItem" TargetType="ComboBoxItem">
