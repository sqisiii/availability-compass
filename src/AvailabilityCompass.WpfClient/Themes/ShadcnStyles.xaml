<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Corner Radius (0.5rem = 8px) -->
    <CornerRadius x:Key="ShadcnRadius">8</CornerRadius>
    <CornerRadius x:Key="ShadcnRadiusSmall">6</CornerRadius>
    <CornerRadius x:Key="ShadcnRadiusLarge">12</CornerRadius>

    <!-- Shadcn Primary Button Style -->
    <Style x:Key="ShadcnPrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="{DynamicResource ShadcnPrimaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnPrimaryForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Height" Value="36" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8" />
        <Setter Property="FontWeight" Value="Medium" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.5" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shadcn Secondary Button Style -->
    <Style x:Key="ShadcnSecondaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="{DynamicResource ShadcnSecondaryBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnSecondaryForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Height" Value="36" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8" />
        <Setter Property="FontWeight" Value="Medium" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.8" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shadcn Outline Button Style -->
    <Style x:Key="ShadcnOutlineButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ShadcnBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Height" Value="36" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8" />
        <Setter Property="FontWeight" Value="Medium" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ShadcnAccentBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shadcn Ghost Button Style -->
    <Style x:Key="ShadcnGhostButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Height" Value="36" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ShadcnAccentBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shadcn Destructive Button Style -->
    <Style x:Key="ShadcnDestructiveButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Background" Value="{DynamicResource ShadcnDestructiveBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnDestructiveForegroundBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="16,8" />
        <Setter Property="Height" Value="36" />
        <Setter Property="materialDesign:ButtonAssist.CornerRadius" Value="8" />
        <Setter Property="FontWeight" Value="Medium" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Opacity" Value="0.9" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shadcn Icon Button Style -->
    <Style x:Key="ShadcnIconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="Width" Value="36" />
        <Setter Property="Height" Value="36" />
        <Setter Property="Padding" Value="6" />
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ShadcnAccentBrush}" />
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Shadcn Card Style -->
    <Style x:Key="ShadcnCard" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{DynamicResource ShadcnCardBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnCardForegroundBrush}" />
        <Setter Property="UniformCornerRadius" Value="8" />
        <Setter Property="Padding" Value="16" />
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2" />
    </Style>

    <!-- Shadcn Header Text Style -->
    <Style x:Key="ShadcnHeading1" TargetType="TextBlock">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style x:Key="ShadcnHeading2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="Margin" Value="0,0,0,6" />
    </Style>

    <Style x:Key="ShadcnHeading3" TargetType="TextBlock">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="Margin" Value="0,0,0,4" />
    </Style>

    <!-- Shadcn Body Text Style -->
    <Style x:Key="ShadcnBody" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnForegroundBrush}" />
        <Setter Property="LineHeight" Value="20" />
    </Style>

    <!-- Shadcn Muted Text Style -->
    <Style x:Key="ShadcnMutedText" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnMutedForegroundBrush}" />
    </Style>

    <!-- Shadcn Small Text Style -->
    <Style x:Key="ShadcnSmall" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="{DynamicResource ShadcnMutedForegroundBrush}" />
    </Style>

    <!-- Toolbar Button Style -->
    <Style x:Key="ShadcnToolbarButton" TargetType="Button" BasedOn="{StaticResource ShadcnGhostButton}">
        <Setter Property="Height" Value="32" />
        <Setter Property="Padding" Value="12,6" />
        <Setter Property="FontSize" Value="13" />
    </Style>

</ResourceDictionary>
